<?xml version='1.0' encoding='utf-8'?>
<widget id="com.offpe.app" version="1.0.7" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Opencil</name>
    <description>
        Open Source News Test Application.
    </description>
    <author email="info@offpe.com" href="http://offpe.com">
        Team OffPe
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <plugin name="cordova-plugin-battery-status" source="npm" spec="~1.2.4" />
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.4.1" />
    <plugin name="cordova-plugin-media-capture" source="npm" spec="~1.4.3" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.6" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.3.3" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.3.3" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.4.3" />
    <plugin name="cordova-plugin-globalization" source="npm" spec="~1.0.7" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.7.1" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.3.3" />
    <plugin name="cordova-plugin-vibration" source="npm" spec="~2.1.5" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <icon src="icon.png" />


    <!-- Icons -->
    <!-- iPhone 6 / 6+ -->
    <icon src="resources/icons/icon-60@3x.png" platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
    <icon src="resources/icons/icon-60.png" platform="ios" width="60" height="60" />
    <icon src="resources/icons/icon-60@2x.png" platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="resources/icons/icon-76.png" platform="ios" width="76" height="76" />
    <icon src="resources/icons/icon-76@2x.png" platform="ios" width="152" height="152" />
    <icon src="resources/icons/icon-83.5@2x.png" platform="ios" width="167" height="167" />

    <!-- Settings Icon -->
    <icon src="resources/icons/icon-small.png" platform="ios" width="29" height="29" />
    <icon src="resources/icons/icon-small@2x.png" platform="ios" width="58" height="58" />
    <icon src="resources/icons/icon-small@3x.png" platform="ios" width="87" height="87" />

    <!-- Spotlight Icon -->
    <icon src="resources/icons/icon-40.png" platform="ios" width="40" height="40" />
    <icon src="resources/icons/icon-40@2x.png" platform="ios" width="80" height="80" />
    <icon src="resources/icons/icon-40@3x.png" platform="ios" width="120" height="120" />

    <!-- iPhone / iPod Touch -->
    <icon src="resources/icons/icon.png" platform="ios" width="57" height="57" />
    <icon src="resources/icons/icon@2x.png" platform="ios" width="114" height="114" />

    <!-- iPad -->
    <icon src="resources/icons/icon-72.png" platform="ios" width="72" height="72" />
    <icon src="resources/icons/icon-72@2x.png" platform="ios" width="144" height="144" />

    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="resources/icons/icon-small.png" platform="ios" width="29" height="29" />
    <icon src="resources/icons/icon-small@2x.png" platform="ios" width="58" height="58" />

    <!-- iPad Spotlight and Settings Icon -->
    <icon src="resources/icons/icon-50.png" platform="ios" width="50" height="50" />
    <icon src="resources/icons/icon-50@2x.png" platform="ios" width="100" height="100" />

    <!-- Android Icons -->
    <icon src="resources/icons/ldpi.png" platform="android" qualifier="ldpi" />
    <icon src="resources/icons/mdpi.png" platform="android" qualifier="mdpi" />
    <icon src="resources/icons/hdpi.png" platform="android" qualifier="hdpi" />
    <icon src="resources/icons/xhdpi.png" platform="android" qualifier="xhdpi" />
    <icon src="resources/icons/xxhdpi.png" platform="android" qualifier="xxhdpi" />
    <icon src="resources/icons/xxxhdpi.png" platform="android" qualifier="xxxhdpi" />
    <icon src="resources/icons/fr-xxhdpi.png" platform="android" qualifier="fr-xxhdpi" />

    <!-- Windows Phone -->
    <icon src="resources/icons/icon.png" platform="winphone" />

    <splash src="splash.png" />
    <splash src="resources/splash-screens/ldpi.png" platform="android" qualifier="ldpi" />
    <splash src="resources/splash-screens/mdpi.png" platform="android" qualifier="mdpi" />
    <splash src="resources/splash-screens/hdpi.png" platform="android" qualifier="hdpi" />
    <splash src="resources/splash-screens/xhdpi.png" platform="android" qualifier="xhdpi" />

    <access origin="*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
